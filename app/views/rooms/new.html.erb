<% provide(:title, 'Create New Room') %>
<h1>Create New Room</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@room, url: room_create_path) do |f| %>
      <%= render 'shared/room_error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control' %>

      <%= f.submit "Create new room", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>